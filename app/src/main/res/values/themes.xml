    <style name="Theme.Stickers.launch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/bg_app</item>
        <item name="popupTheme">@style/PopupMenu</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="imgTxtStyle">
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="imgStyle">
        <item name="android:padding">@dimen/_1sdp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ActionBar.nameText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="tabEnableStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:tag">@string/true_</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/round_left_stroke</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="tabDisableStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:tag">@string/false_</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/round_right_stroke</item>
    </style>

    <style name="tabMidStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:tag">@string/false_</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/round_stroke_</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>


    <style name="AdTheme">
        <item name="android:background">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <!--<item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>-->
